{{#if addAnswer }}
  <h4>Answer Form</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="author">Author</label><br>
        {{input value=author id="author"}}
      </div>
      <div class="form-group">
        <label for="content">Answer</label><br>
        {{textarea value=content id="content"}}
      </div>
      <button class="btn btn-success" {{action 'saveAnswer'}}>Answer!</button>
    </form>
  </div>
{{else}}
  <button class="btn btn-info form-trigger" {{action 'answerFormShow'}}>Answer This Question</button>
{{/if}}
